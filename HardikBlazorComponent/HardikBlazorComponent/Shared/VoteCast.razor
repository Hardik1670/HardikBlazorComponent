@page "/votecast"

<h3><b>Welcome To Voting Booth
    
    @name</b></h3>
<h3 class=".text-danger"> Vote Cast:@voteNum <br /> @msg</h3>

<div class="container-fluid">
    <form>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label for="name">Name</label>
                </div>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="name" @bind="name" name="name">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label for="vote"> Vote</label>
                </div>
                <div class="col-sm-6">
                    <input type="number" class="form-control" id="vote" @bind="vote" name="vote">
                </div>
            </div>
        </div>
    </form>
    </div>





<button class="btn btn-primary" @onclick="CastVote">Click me</button>

@code {
    private String voteMsg = "";
    private int vote;
    private int voteNum;
    public String name;
    private String msg;
    private Boolean flag = false;



    private void CastVote()
    {
        flag = true;
        if(flag)
        {
            voteNum = vote;

            if(voteNum>=1 && voteNum<=5)
            {
                msg = "Thank You For Voting";

            }
            else
            {
                msg = "Please Enter Value Between 1 and 5";

            }
        }

    }

}
